@page
@model IndexModel
@{
    ViewData["Title"] = "BDElite Fleet Insurance Platform";
}

<!-- Hero Section -->
<section class="hero-section text-center py-5 mb-5">
    <div class="hero-content fade-in-up">
        <h1 class="display-4 mb-4">BDElite Fleet Insurance Platform</h1>
        <p class="lead mb-5">Connecting Fleet Managers, Insurance Brokers, and Insurance Providers through innovative technology</p>
        <div class="hero-stats row text-center mb-5">
            <div class="col-md-4">
                <div class="stat-item">
                    <h3 class="stat-number" style="background: var(--primary-gradient); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">10,000+</h3>
                    <p class="stat-label">Fleet Vehicles</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-item">
                    <h3 class="stat-number" style="background: var(--success-gradient); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">500+</h3>
                    <p class="stat-label">Active Brokers</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-item">
                    <h3 class="stat-number" style="background: var(--secondary-gradient); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">50+</h3>
                    <p class="stat-label">Insurance Providers</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- User Type Cards -->
<section class="user-types-section mb-5">
    <div class="row g-4">
        <div class="col-lg-4 col-md-6">
            <div class="card h-100 user-type-card">
                <div class="card-body text-center position-relative">
                    <div class="icon-wrapper mb-4">
                        <i class="fas fa-truck fa-4x text-primary"></i>
                    </div>
                    <h5 class="card-title">Fleet Managers</h5>
                    <p class="card-text">Streamline your fleet operations with comprehensive insurance management, real-time vehicle tracking, and automated policy renewals.</p>
                    <div class="feature-highlights mb-4">
                        <small class="text-muted">
                            <i class="fas fa-star text-warning me-1"></i>
                            Vehicle Management • Quote Comparison • Claims Tracking
                        </small>
                    </div>
                    <a href="/FleetDashboard" class="btn btn-primary btn-lg">Access Fleet Dashboard</a>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-6">
            <div class="card h-100 user-type-card">
                <div class="card-body text-center position-relative">
                    <div class="icon-wrapper mb-4">
                        <i class="fas fa-handshake fa-4x text-success"></i>
                    </div>
                    <h5 class="card-title">Insurance Brokers</h5>
                    <p class="card-text">Connect with fleet managers and offer competitive products from multiple providers with advanced commission tracking and client management.</p>
                    <div class="feature-highlights mb-4">
                        <small class="text-muted">
                            <i class="fas fa-star text-warning me-1"></i>
                            Client Portal • Commission Analytics • Multi-Provider Access
                        </small>
                    </div>
                    <a href="/BrokerPortal" class="btn btn-success btn-lg">Enter Broker Portal</a>
                </div>
            </div>
        </div>
        <div class="col-lg-4 col-md-12">
            <div class="card h-100 user-type-card">
                <div class="card-body text-center position-relative">
                    <div class="icon-wrapper mb-4">
                        <i class="fas fa-shield-alt fa-4x text-info"></i>
                    </div>
                    <h5 class="card-title">Insurance Providers</h5>
                    <p class="card-text">Manage your fleet insurance products, set competitive rates, and access comprehensive business analytics and risk assessment tools.</p>
                    <div class="feature-highlights mb-4">
                        <small class="text-muted">
                            <i class="fas fa-star text-warning me-1"></i>
                            Product Management • Risk Analytics • Business Reporting
                        </small>
                    </div>
                    <a href="/ProviderConsole" class="btn btn-info btn-lg">Open Provider Console</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Grid -->
<section class="features-section">
    <div class="row">
        <div class="col-12 text-center mb-5">
            <h2 class="section-title">Platform Features & Capabilities</h2>
            <p class="section-subtitle">Everything you need to manage fleet insurance operations efficiently</p>
        </div>
    </div>

    <div class="row g-4">
        <div class="col-lg-3 col-md-6">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-cars"></i>
                </div>
                <h6>Fleet Management</h6>
                <ul class="feature-list">
                    <li><i class="fas fa-check"></i> Vehicle Registration</li>
                    <li><i class="fas fa-check"></i> Maintenance Tracking</li>
                    <li><i class="fas fa-check"></i> Status Monitoring</li>
                </ul>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-calculator"></i>
                </div>
                <h6>Quote & Policy</h6>
                <ul class="feature-list">
                    <li><i class="fas fa-check"></i> Instant Quotes</li>
                    <li><i class="fas fa-check"></i> Policy Binding</li>
                    <li><i class="fas fa-check"></i> Renewal Management</li>
                </ul>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-chart-line"></i>
                </div>
                <h6>Analytics & Reports</h6>
                <ul class="feature-list">
                    <li><i class="fas fa-check"></i> Business Intelligence</li>
                    <li><i class="fas fa-check"></i> Commission Tracking</li>
                    <li><i class="fas fa-check"></i> Risk Assessment</li>
                </ul>
            </div>
        </div>

        <div class="col-lg-3 col-md-6">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-cogs"></i>
                </div>
                <h6>Automation</h6>
                <ul class="feature-list">
                    <li><i class="fas fa-check"></i> Workflow Engine</li>
                    <li><i class="fas fa-check"></i> Document Management</li>
                    <li><i class="fas fa-check"></i> Integration APIs</li>
                </ul>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="cta-section text-center py-5 mt-5">
    <div class="cta-content">
        <h3 class="mb-4" style="color: var(--dark-color);">Ready to Transform Your Fleet Insurance Operations?</h3>
        <p class="lead mb-4" style="opacity: 0.8;">Join thousands of fleet managers, brokers, and providers already using our platform</p>
        <div class="cta-buttons">
            <a href="#" class="btn btn-primary btn-lg me-3 mb-2">Get Started Today</a>
            <a href="#" class="btn btn-outline-primary btn-lg mb-2">Schedule Demo</a>
        </div>
    </div>
</section>

<style>
/* Hero Section Enhancements */
.hero-section {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%);
    border-radius: var(--border-radius-lg);
    margin: 2rem 0;
}

.stat-item {
    padding: 1rem;
}

.stat-number {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 0.5rem;
}

.stat-label {
    font-weight: 500;
    color: var(--dark-color);
    opacity: 0.7;
}

/* User Type Cards */
.user-type-card {
    transition: var(--transition);
    position: relative;
    overflow: hidden;
}

.user-type-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: var(--primary-gradient);
    transform: scaleX(0);
    transition: var(--transition);
}

.user-type-card:hover::before {
    transform: scaleX(1);
}

.icon-wrapper {
    position: relative;
    display: inline-block;
}

.feature-highlights {
    padding: 0.75rem 1rem;
    background: rgba(102, 126, 234, 0.05);
    border-radius: var(--border-radius);
    margin: 1rem 0;
}

/* Features Section */
.section-title {
    font-weight: 700;
    color: var(--dark-color);
    margin-bottom: 1rem;
}

.section-subtitle {
    color: var(--dark-color);
    opacity: 0.7;
    font-size: 1.1rem;
}

.feature-card {
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(20px);
    border-radius: var(--border-radius-lg);
    padding: 2rem;
    text-align: center;
    box-shadow: var(--shadow-soft);
    transition: var(--transition);
    height: 100%;
}

.feature-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-medium);
}

.feature-icon {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background: var(--primary-gradient);
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
    font-size: 1.5rem;
    color: white;
}

.feature-card h6 {
    font-weight: 700;
    color: var(--dark-color);
    margin-bottom: 1.5rem;
}

.feature-list {
    list-style: none;
    padding: 0;
    text-align: left;
}

.feature-list li {
    padding: 0.25rem 0;
    color: var(--dark-color);
    opacity: 0.8;
}

.feature-list .fa-check {
    color: var(--success-color);
    margin-right: 0.5rem;
    font-size: 0.8rem;
}

/* CTA Section */
.cta-section {
    background: linear-gradient(135deg, rgba(245, 87, 108, 0.1) 0%, rgba(102, 126, 234, 0.1) 100%);
    border-radius: var(--border-radius-lg);
}

.btn-outline-primary {
    border: 2px solid var(--primary-color);
    color: var(--primary-color);
    background: transparent;
}

.btn-outline-primary:hover {
    background: var(--primary-gradient);
    border-color: transparent;
    transform: translateY(-3px);
    box-shadow: var(--shadow-medium);
}

/* Responsive improvements */
@@media (max-width: 768px) {
    .stat-number {
        font-size: 2rem;
    }

    .feature-card {
        padding: 1.5rem;
    }

    .btn-lg {
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
    }

    .cta-buttons .btn {
        display: block;
        width: 100%;
        margin: 0.5rem 0;
    }
}
</style>

@page
@model FleetDashboardModel
@{
    ViewData["Title"] = "Fleet Manager Dashboard";
}

<div class="dashboard-header mb-4">
    <div class="row align-items-center">
        <div class="col-md-8">
            <h1 class="dashboard-title">Fleet Manager Dashboard</h1>
            <p class="dashboard-subtitle">Manage your fleet vehicles, insurance policies, and claims</p>
        </div>
        <div class="col-md-4 text-end">
            <button class="btn btn-primary me-2">
                <i class="fas fa-plus me-2"></i>Add Vehicle
            </button>
            <button class="btn btn-success">
                <i class="fas fa-file-contract me-2"></i>Request Quote
            </button>
        </div>
    </div>
</div>

<!-- Dashboard Stats -->
<div class="row mb-4">
    <div class="col-xl-3 col-md-6 mb-3">
        <div class="stat-card">
            <div class="stat-icon">
                <i class="fas fa-truck"></i>
            </div>
            <div class="stat-content">
                <h3 class="stat-number">44</h3>
                <p class="stat-label">Total Vehicles</p>
                <small class="stat-change positive">
                    <i class="fas fa-arrow-up"></i> Across 3 policies
                </small>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-3">
        <div class="stat-card">
            <div class="stat-icon success">
                <i class="fas fa-shield-check"></i>
            </div>
            <div class="stat-content">
                <h3 class="stat-number">3</h3>
                <p class="stat-label">Fleet Policies</p>
                <small class="stat-change positive">
                    <i class="fas fa-arrow-up"></i> 2 active, 1 expired
                </small>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-3">
        <div class="stat-card">
            <div class="stat-icon warning">
                <i class="fas fa-exclamation-triangle"></i>
            </div>
            <div class="stat-content">
                <h3 class="stat-number">3</h3>
                <p class="stat-label">Open Claims</p>
                <small class="stat-change neutral">
                    <i class="fas fa-clock"></i> 2 pending review
                </small>
            </div>
        </div>
    </div>
    <div class="col-xl-3 col-md-6 mb-3">
        <div class="stat-card">
            <div class="stat-icon info">
                <i class="fas fa-dollar-sign"></i>
            </div>
            <div class="stat-content">
                <h3 class="stat-number">$25,450</h3>
                <p class="stat-label">Annual Premium</p>
                <small class="stat-change positive">
                    <i class="fas fa-arrow-up"></i> $2,121/month
                </small>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <!-- Fleet Policies Overview -->
    <div class="col-lg-8 mb-4">
        <div class="dashboard-card">
            <div class="card-header">
                <h5 class="card-title">Fleet Insurance Policies</h5>
                <div class="card-actions">
                    <button class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-filter me-1"></i>Filter
                    </button>
                    <button class="btn btn-sm btn-outline-secondary">
                        <i class="fas fa-download me-1"></i>Export
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Policy Number</th>
                                <th>Term Period</th>
                                <th>Vehicles</th>
                                <th>Premium</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr class="clickable-row" onclick="window.location='/FleetPolicy/CFP-2024-FL-001234'">
                                <td>
                                    <div class="policy-info">
                                        <div class="policy-icon">
                                            <i class="fas fa-file-contract"></i>
                                        </div>
                                        <div>
                                            <strong>CFP-2024-FL-001234</strong>
                                            <br><small class="text-muted">Commercial Fleet Plus</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <strong>Jan 15, 2024 - Jan 14, 2025</strong>
                                    <br><small class="text-muted">Annual Policy</small>
                                </td>
                                <td>
                                    <span class="vehicle-count">24 Vehicles</span>
                                    <br><small class="text-muted">Full Coverage</small>
                                </td>
                                <td>
                                    <strong>$12,450/year</strong>
                                    <br><small class="text-muted">$1,037.50/month</small>
                                </td>
                                <td>
                                    <span class="badge bg-success">Active</span>
                                    <br><small class="renewal-alert">Renews in 45 days</small>
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary" onclick="event.stopPropagation(); window.location='/FleetPolicy/CFP-2024-FL-001234'">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-success" onclick="event.stopPropagation();">
                                        <i class="fas fa-download"></i>
                                    </button>
                                </td>
                            </tr>
                            <tr class="clickable-row" onclick="window.location='/FleetPolicy/CFP-2023-FL-000987'">
                                <td>
                                    <div class="policy-info">
                                        <div class="policy-icon">
                                            <i class="fas fa-file-contract"></i>
                                        </div>
                                        <div>
                                            <strong>CFP-2023-FL-000987</strong>
                                            <br><small class="text-muted">Small Fleet Standard</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <strong>Mar 10, 2023 - Mar 09, 2024</strong>
                                    <br><small class="text-muted">Annual Policy</small>
                                </td>
                                <td>
                                    <span class="vehicle-count">8 Vehicles</span>
                                    <br><small class="text-muted">Basic Coverage</small>
                                </td>
                                <td>
                                    <strong>$4,800/year</strong>
                                    <br><small class="text-muted">$400/month</small>
                                </td>
                                <td>
                                    <span class="badge bg-danger">Expired</span>
                                    <br><small class="renewal-alert">Renewal available</small>
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary" onclick="event.stopPropagation(); window.location='/FleetPolicy/CFP-2023-FL-000987'">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-warning" onclick="event.stopPropagation();">
                                        <i class="fas fa-sync-alt"></i>
                                    </button>
                                </td>
                            </tr>
                            <tr class="clickable-row" onclick="window.location='/FleetPolicy/CFP-2024-FL-001456'">
                                <td>
                                    <div class="policy-info">
                                        <div class="policy-icon">
                                            <i class="fas fa-file-contract"></i>
                                        </div>
                                        <div>
                                            <strong>CFP-2024-FL-001456</strong>
                                            <br><small class="text-muted">Premium Fleet Pro</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <strong>Jun 01, 2024 - May 31, 2025</strong>
                                    <br><small class="text-muted">Annual Policy</small>
                                </td>
                                <td>
                                    <span class="vehicle-count">12 Vehicles</span>
                                    <br><small class="text-muted">Comprehensive</small>
                                </td>
                                <td>
                                    <strong>$8,200/year</strong>
                                    <br><small class="text-muted">$683.33/month</small>
                                </td>
                                <td>
                                    <span class="badge bg-success">Active</span>
                                    <br><small class="renewal-alert">Renews in 180 days</small>
                                </td>
                                <td>
                                    <button class="btn btn-sm btn-outline-primary" onclick="event.stopPropagation(); window.location='/FleetPolicy/CFP-2024-FL-001456'">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <button class="btn btn-sm btn-outline-success" onclick="event.stopPropagation();">
                                        <i class="fas fa-download"></i>
                                    </button>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Right Sidebar -->
    <div class="col-lg-4">
        <!-- Recent Activity -->
        <div class="dashboard-card mb-4">
            <div class="card-header">
                <h5 class="card-title">Recent Activity</h5>
            </div>
            <div class="card-body">
                <div class="activity-list">
                    <div class="activity-item">
                        <div class="activity-icon success">
                            <i class="fas fa-check"></i>
                        </div>
                        <div class="activity-content">
                            <p class="activity-text">Policy renewed for Ford Transit #001</p>
                            <small class="activity-time">2 hours ago</small>
                        </div>
                    </div>
                    <div class="activity-item">
                        <div class="activity-icon warning">
                            <i class="fas fa-exclamation"></i>
                        </div>
                        <div class="activity-content">
                            <p class="activity-text">Maintenance due for Toyota Camry #002</p>
                            <small class="activity-time">1 day ago</small>
                        </div>
                    </div>
                    <div class="activity-item">
                        <div class="activity-icon info">
                            <i class="fas fa-file-alt"></i>
                        </div>
                        <div class="activity-content">
                            <p class="activity-text">New quote received from Broker ABC</p>
                            <small class="activity-time">3 days ago</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="dashboard-card">
            <div class="card-header">
                <h5 class="card-title">Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="quick-actions">
                    <button class="quick-action-btn">
                        <i class="fas fa-plus"></i>
                        <span>Add Vehicle</span>
                    </button>
                    <button class="quick-action-btn">
                        <i class="fas fa-file-contract"></i>
                        <span>Request Quote</span>
                    </button>
                    <button class="quick-action-btn">
                        <i class="fas fa-exclamation-circle"></i>
                        <span>File Claim</span>
                    </button>
                    <button class="quick-action-btn">
                        <i class="fas fa-chart-bar"></i>
                        <span>View Reports</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.dashboard-title {
    font-weight: 800;
    background: var(--primary-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: 0.5rem;
}

.dashboard-subtitle {
    color: var(--dark-color);
    opacity: 0.7;
    margin-bottom: 0;
}

.stat-card {
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(20px);
    border-radius: var(--border-radius-lg);
    padding: 1.5rem;
    box-shadow: var(--shadow-soft);
    transition: var(--transition);
    display: flex;
    align-items: center;
    height: 100%;
}

.stat-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-medium);
}

.stat-icon {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background: var(--primary-gradient);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    color: white;
    margin-right: 1rem;
    flex-shrink: 0;
}

.stat-icon.success {
    background: var(--success-gradient);
}

.stat-icon.warning {
    background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.stat-icon.info {
    background: var(--secondary-gradient);
}

.stat-content {
    flex: 1;
}

.stat-number {
    font-size: 2rem;
    font-weight: 800;
    color: var(--dark-color);
    margin-bottom: 0.25rem;
}

.stat-label {
    font-weight: 600;
    color: var(--dark-color);
    opacity: 0.8;
    margin-bottom: 0.25rem;
}

.stat-change {
    font-size: 0.85rem;
    font-weight: 500;
}

.stat-change.positive {
    color: #00f2fe;
}

.stat-change.negative {
    color: #f5576c;
}

.stat-change.neutral {
    color: var(--dark-color);
    opacity: 0.6;
}

.dashboard-card {
    background: rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(20px);
    border-radius: var(--border-radius-lg);
    box-shadow: var(--shadow-soft);
    border: none;
    overflow: hidden;
}

.card-header {
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
    border-bottom: 1px solid rgba(102, 126, 234, 0.1);
    padding: 1.5rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.card-title {
    font-weight: 700;
    color: var(--dark-color);
    margin-bottom: 0;
}

.card-actions {
    display: flex;
    gap: 0.5rem;
}

.vehicle-info {
    display: flex;
    align-items: center;
}

.vehicle-icon {
    width: 40px;
    height: 40px;
    border-radius: var(--border-radius);
    background: var(--primary-gradient);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    margin-right: 1rem;
    font-size: 1.1rem;
}

.activity-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.activity-item {
    display: flex;
    align-items: flex-start;
}

.activity-icon {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    margin-right: 1rem;
    flex-shrink: 0;
    font-size: 0.9rem;
}

.activity-icon.success {
    background: var(--success-gradient);
}

.activity-icon.warning {
    background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.activity-icon.info {
    background: var(--primary-gradient);
}

.activity-content {
    flex: 1;
}

.activity-text {
    font-weight: 500;
    color: var(--dark-color);
    margin-bottom: 0.25rem;
    font-size: 0.9rem;
}

.activity-time {
    color: var(--dark-color);
    opacity: 0.6;
    font-size: 0.8rem;
}

.quick-actions {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
}

.quick-action-btn {
    background: rgba(102, 126, 234, 0.05);
    border: 2px solid rgba(102, 126, 234, 0.1);
    border-radius: var(--border-radius);
    padding: 1rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    transition: var(--transition);
    color: var(--dark-color);
    text-decoration: none;
}

.quick-action-btn:hover {
    background: var(--primary-gradient);
    color: white;
    border-color: transparent;
    transform: translateY(-3px);
    box-shadow: var(--shadow-medium);
}

.quick-action-btn i {
    font-size: 1.5rem;
}

.quick-action-btn span {
    font-weight: 600;
    font-size: 0.9rem;
    text-align: center;
}

.table {
    margin-bottom: 0;
}

.table th {
    font-weight: 600;
    color: var(--dark-color);
    border-bottom: 2px solid rgba(102, 126, 234, 0.1);
    padding: 1rem 0.75rem;
}

.table td {
    padding: 1rem 0.75rem;
    vertical-align: middle;
    border-bottom: 1px solid rgba(102, 126, 234, 0.05);
}

.table tbody tr:hover {
    background: rgba(102, 126, 234, 0.02);
}

.badge {
    font-weight: 600;
    padding: 0.5rem 0.75rem;
    border-radius: var(--border-radius);
}

/* Policy-specific styling */
.policy-info {
    display: flex;
    align-items: center;
}

.policy-icon {
    width: 40px;
    height: 40px;
    border-radius: var(--border-radius);
    background: var(--success-gradient);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    margin-right: 1rem;
    font-size: 1.1rem;
}

.vehicle-count {
    font-weight: 600;
    color: var(--primary-color);
}

.renewal-alert {
    color: var(--accent-color);
    font-weight: 500;
    font-size: 0.8rem;
}

.clickable-row {
    cursor: pointer;
    transition: var(--transition);
}

.clickable-row:hover {
    background: rgba(102, 126, 234, 0.05);
    transform: translateX(3px);
}

@@media (max-width: 768px) {
    .dashboard-header .col-md-4 {
        text-align: center !important;
        margin-top: 1rem;
    }

    .stat-card {
        padding: 1rem;
    }

    .stat-number {
        font-size: 1.5rem;
    }

    .card-header {
        flex-direction: column;
        gap: 1rem;
        align-items: stretch;
    }

    .card-actions {
        justify-content: center;
    }

    .quick-actions {
        grid-template-columns: 1fr;
    }

    .clickable-row {
        cursor: default;
    }

    .clickable-row:hover {
        transform: none;
    }
}
</style>

